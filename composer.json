{
    "name": "adimeo/adimeo_tools",
    "license": "GPL-3.0-only",
    "description": "Custom tools for Drupal 8 development @Adimeo",
    "type": "drupal-module",
    "authors": [
        {
            "name": "Adimeo",
            "email": "contact@adimeo.com"
        }
    ],
    "repositories": {
        "0": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "require": {
        "cocur/slugify": "^v3.2",
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "adimeo_domain_sitemap/composer.json",
                "adimeo_social_wall/composer.json"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        }
    }
}
